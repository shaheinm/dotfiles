# -- ant -----------------------------------------------------------------------
export ANT_ROOT="$(brew --prefix ant)/bin"

# -- `ondir` configuration -----------------------------------------------------
function chpwd() {
  eval "`ondir \"$OLDPWD\" \"$PWD\"`"
}
eval "`ondir /`"

# -- Add Homebrew zsh-completions & nvm ----------------------------------------
source $(brew --prefix)/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source $(brew --prefix nvm)/nvm.sh
